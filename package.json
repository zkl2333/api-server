{
	"name": "api-server",
	"version": "0.1.0",
	"private": true,
	"lint-staged": {
		"*.{js,json,css}": [
			"prettier --write",
			"git add"
		]
	},
	"scripts": {
		"precommit": "lint-staged",
		"changelog": "conventional-changelog -p angular -i README.md -s -r 0",
		"start": "node bin/www",
		"dev": "./node_modules/.bin/nodemon bin/www",
		"prd": "pm2 start bin/www",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"dependencies": {
		"axios": "^0.18.1",
		"debug": "^4.1.0",
		"ejs": "~2.6.1",
		"koa": "^2.6.2",
		"koa-bodyparser": "^4.2.1",
		"koa-convert": "^1.2.0",
		"koa-json": "^2.0.2",
		"koa-logger": "^3.2.0",
		"koa-onerror": "^4.1.0",
		"koa-router": "^7.4.0",
		"koa-static": "^5.0.0",
		"koa-views": "^6.1.5",
		"mysql": "^2.16.0"
	},
	"devDependencies": {
		"conventional-changelog-cli": "^2.0.11",
		"cz-conventional-changelog": "^2.1.0",
		"husky": "^1.2.1",
		"lint-staged": "^8.1.0",
		"nodemon": "^1.18.9",
		"prettier": "^1.15.3"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
